@{
    Layout = null;
}
<div id="filesDialog" class="hide">
    <table border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td><input type="file" name="file_upload" id="file_upload" /></td>
            <td style="padding-top:8px;vertical-align:top"><font color="red">&nbsp;&nbsp;&nbsp;<strong>File Size Limit (20MB)</strong></font></td>
        </tr>
    </table>
    <div style="overflow-y:auto;height:290px">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thin-border-bottom">
                <tr>
                    <th style="padding:8px;">
                        File
                    </th>
                    <th style="padding:8px;">
                        Size
                    </th>
                    <th style="padding:8px;">
                        Date
                    </th>
                    <th style="padding:8px;">
                        User
                    </th>
                    <th style="padding:8px;">
                        Category
                    </th>
                    <th width="30px"></th>
                </tr>
            </thead>
            <tbody id="filesBody"></tbody>
        </table>
    </div>
</div>

<link rel="stylesheet" type="text/css" href="@Url.Content("~/Scripts/uploadify/uploadify.css")">
<script type="text/javascript" src="@Url.Content("~/Scripts/uploadify/jquery.uploadify.min.js")"></script>
<script language="javascript">
    var tempId = '@Guid.NewGuid().ToString()';
    function showFilesDialog(category, categoryDesc) {
        category = category || "";
        categoryDesc = categoryDesc || "";
        $("#file_upload").uploadify({
            height: 30,
            removeTimeout: 0,
            fileSizeLimit: '20MB',
            swf: '@Url.Content("~/Scripts/uploadify/uploadify.swf")',
            formData: { RFQID: _dataId, TempId: tempId, category: category, categoryDesc: categoryDesc },
            uploader: '@Url.Content("~/Export/Upload")',
            width: 120,
            onUploadComplete: function (file) {
                loadTable(category);
            }
        });
        var dialog = $("#filesDialog").removeClass('hide').dialog({
            modal: true,
            width: 650,
            minHeight: 350,
            maxHeight: 450,
            resizable: false,
            title: "<div class='widget-header widget-header-small'><h4 class='smaller'><i class='icon-ok'></i> Attachment</h4></div>",
            title_html: true,
            open: loadTable(category),
            close: function () {
                $(this).dialog("destroy");
                $("#filesDialog").addClass("hide");
            }
        });
    }
 
    function loadTable(category) {
        category = category || "";
        $.post('@Url.Content("~/Export/GetFiles")', { RFQID: _dataId, TempId: tempId, category: category }, function (data) {
            var fileHtml = "";
            if (data != null && data.rows != null) {
                for (var i = 0; i < data.rows.length; i++) {
                    fileHtml += '<tr><td style="padding:8px;"><a target="_blank" href="@Url.Content("~/Export/DownloadFile/")' + data.rows[i]["ID"] + '">' + data.rows[i]["SourceName"] + '</td><td style="padding:8px;">' + data.rows[i]["FileSize"] + '</td><td style="padding:8px;">' + data.rows[i]["CreateTime"] + '</td><td style="padding:8px;">' + data.rows[i]["Creator"] + '</td><td style="padding:8px;">' + data.rows[i]["CategoryDesc"] + '</td><td style="padding:8px;"><a href="javascript:void(0)" onclick="delFiles(' + data.rows[i]["ID"] + ')"><i class="red icon-remove bigger-130"></i></a></td></tr>';
                }
            }
            $("#filesBody").html(fileHtml);
        }, "json");
    }

    function delFiles(fileId) {
        var mw = document.createElement('div');
        mw.innerHTML = '<div class="space-6"></div><p class="bigger-110 bolder center grey"> Are you sure ?</p>';
        $(mw).dialog({
            width: '250px',
            resizable: false,
            modal: true,
            title: "<div class='widget-header'><h4 class='smaller'><i class='icon-warning-sign red'></i> Delete</h4></div>",
            title_html: true,
            close: function () {
                $(this).dialog("destroy");
            },
            buttons: [
                {
                    html: "<i class='icon-trash bigger-110'></i>&nbsp; Delete",
                    "class": "btn btn-danger btn-xs",
                    click: function () {
                        $(this).dialog("destroy");
                        $.post('@Url.Content("~/Export/DeleteFile")', { fileId: fileId }, function (data) {
                            loadTable();
                            if (!data.success) {
                                $.bi.dialog.showErr({ title: "Error", content: data.message });
                            }
                        }, "json");
                    }
                },
                {
                    html: "<i class='icon-remove bigger-110'></i>&nbsp; Cancel",
                    "class": "btn btn-xs",
                    click: function () {
                        $(this).dialog("destroy");
                    }
                }
            ]
        });
    }
</script>
