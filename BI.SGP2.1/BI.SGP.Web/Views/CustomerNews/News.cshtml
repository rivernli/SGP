    <!-- inline scripts related to this page -->
    <script type="text/javascript">
        var CustomerId = '@Request["CustomerId"]';
        var rootUrl = '@Url.Content("~/")';

        $(document).ready(function () {

            if (CustomerId == null || CustomerId == "") {
                //hide button
                $("#btnInsert").hide();
            }

            //$(document).keydown(function (e) {
            //    if (e.keyCode == 13) {
            //        $("#btnSearch").click();
            //        return false;
            //    }
            //});

            createGrid();

            $("#searchPanel").resize(function (e) {
                $("#grid-table").jqGrid('setGridWidth', $(".widget-box").width());
            });

            $("#btnInsert").on('click', function (e) {
                editData();
            })
            
        });

        function searchGrid() {
            var postData = $.bi.form.getData("fm");
            $('#grid-table').jqGrid('setGridParam', {
                url: '@Url.Content("~/CustomerNews/GetCusomerNewsData")' + '?CustomerId=' + CustomerId,
                postData: postData,
                page: 1
            }).trigger("reloadGrid");
        }

        function createGrid() {
            var grid_selector = "#grid-table";
            var pager_selector = "#grid-pager";
            var CustomerId = '@Request["CustomerId"]';

            $(grid_selector).jqGrid({
                url: '@Url.Content("~/CustomerNews/GetCusomerNewsData")' + '?CustomerId=' + CustomerId,
                sortorder: 'desc',
                datatype: "json",
                sortname: 'ID',
                height: 250,
                colNames: [' ', 'Topic', 'UserName', 'Date', 'Views', 'Replies'],
                colModel: [
                    {
                        name: 'myac', index: '', width: 80, fixed: true, sortable: false, resize: false,
                        formatter: function (cellvalue, options, rowObject) {
                            var returtString = '';
                            if (rowObject["isRead"] == 0) {
                                returtString += '<div title="View" style="float:left;cursor:pointer;" class="ui-pg-div ui-inline-edit" onclick="doView(' + rowObject["ID"] + ')" onmouseover="jQuery(this).addClass(\'ui-state-hover\');" onmouseout="jQuery(this).removeClass(\'ui-state-hover\')"><span class="ui-icon icon-comment red"></span></div>';
                            } else
                            {
                                returtString += '<div title="View" style="float:left;cursor:pointer;" class="ui-pg-div ui-inline-edit" onclick="doView(' + rowObject["ID"] + ')" onmouseover="jQuery(this).addClass(\'ui-state-hover\');" onmouseout="jQuery(this).removeClass(\'ui-state-hover\')"><span class="ui-icon icon-comment"></span></div>';
                            }
                            returtString += '<div title="Edit" style="float:left;cursor:pointer;" class="ui-pg-div ui-inline-edit" onclick="editData(' + rowObject["ID"] + ')" onmouseover="jQuery(this).addClass(\'ui-state-hover\');" onmouseout="jQuery(this).removeClass(\'ui-state-hover\')"><span class="ui-icon ui-icon-pencil"></span></div>';
                            returtString += '<div title="Delete" style="float:left;margin-left:2px;" class="ui-pg-div ui-inline-del" onclick="delData(' + rowObject["ID"] + ')" onmouseover="jQuery(this).addClass(\'ui-state-hover\');" onmouseout="jQuery(this).removeClass(\'ui-state-hover\');"><span class="ui-icon ui-icon-trash"></span></div>';
                            return returtString;
                        }                        
                    },
                    {
                        name: 'Topic', index: 'Topic', width: 500,
                        formatter: function (cellvalue, options, rowObject) {
                            cellvalue = cellvalue || "";
                            return "<a href='javascript:void(0)' onclick='doView(\"" + rowObject["ID"] + "\")'>" + cellvalue + "</a>";
                        }
                    },
                    { name: 'UserName', index: 'UserName', width: 130 },
                    { name: 'PostedDate', index: 'PostedDate', width: 130, formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i:s', newformat: 'Y-m-d H:i:s' } },
                    { name: 'SumViews', index: 'SumViews', width: 130 },
                    { name: 'Replies', index: 'Replies', width: 130 },
                ],

                viewrecords: true,
                rowNum: 10,
                rowList: [10, 20, 30],
                pager: pager_selector,
                altRows: true,

                multiselect: true,
                multiboxonly: true,

                loadComplete: function () {
                    var table = this;
                    setTimeout(function () {
                        $.bi.grid.updatePagerIcons(table);
                    }, 0);
                },
                recordpos: "left",
                height: "auto",
                shrinkToFit: false,
                autowidth: true
            });
        }

        function doView(keyValue)
        { 
            //点击数
            $.post('@Url.Content("~/CustomerNews/SaveNewsViews")', { ID: keyValue }, function (data) {
                if (data.success) {
                    //调用父页面函数
                    $(window.parent.CustomerNewSum());
                }
            });
            searchGrid();
            //打开新闻
            window.open('@Url.Content("~/CustomerNews/NewsView")' + '?ID=' + keyValue);

        }

        function editData(keyValue) {
            $.post('@Url.Content("~/CustomerNews/NewsEditor")', function (data) {
                $.bi.dialog.show({
                    title: 'News',
                    content: data,
                    width: 800,
                    buttons: [],
                    create: function () {
                        if (typeof (CustomeNewsloadData) == "function") {
                            CustomeNewsloadData(keyValue, CustomerId);
                        }
                    },
                    close: function () {                       
                        searchGrid();
                        //调用父页面函数--未查看的新闻条数
                        $(window.parent.CustomerNewSum());
                    }
                });
            }, 'html');
        }

        function delData(id) {
            $.bi.dialog.show({
                iconCss: 'icon-warning-sign red',
                title: 'Delete',
                width: '250px',
                content: 'Delete selected record?',
                buttons: [
                    {
                        html: "<i class='icon-trash bigger-110'></i>&nbsp; Delete",
                        "class": "btn btn-danger btn-xs",
                        click: function () {
                            $.post('@Url.Content("~/CustomerNews/DelData")', { ID: id }, function (data) {
                                if (data.success) {
                                    searchGrid();
                                    //调用父页面函数
                                    $(window.parent.CustomerNewSum());
                                } else {
                                    if (!data.success) {
                                        $.bi.dialog.showErr({ title: "Message", content: data.errMessage, iconCss: "icon-warning-sign red" });
                                    }
                                }
                            }, "json");
                            $(this).dialog("destroy");
                        }
                    },
                    {
                        html: "<i class='icon-remove bigger-110'></i>&nbsp; Cancel",
                        "class": "btn btn-xs",
                        click: function () {
                            $(this).dialog("destroy");
                        }
                    }
                ]
            });
        }

    </script>

</body>

